@model SliderSettings
@{
    ViewData["Title"] = "Slider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">SLİDER</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                    <li class="breadcrumb-item active">SLİDER EKLE</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">


    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

           
                <form asp-controller="Home" asp-action="Slider" method="post" enctype="multipart/form-data" >
                    <div class="fallback dropzone">
                        <input asp-for="ImageName" type="file">
                    </div>
                    <div class="dz-message needsclick">
                        <div class="mb-3">
                            <i class="display-4 text-muted bx bxs-cloud-upload"></i>
                        </div>

                        <h4>Drop files here or click to upload.</h4>
                    </div>
                    <div class="form-group row mb-4 mt-5">
                        <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Açıklama</label>
                        <div class="col-sm-9">
                            <input asp-for="Description" type="text" class="form-control" id="horizontal-firstname-input">
                        </div>
                    </div>
                    <div class="form-group row mb-4">
                        <label for="horizontal-email-input" class="col-sm-3 col-form-label">Resim Adı</label>
                        <div class="col-sm-9">
                            <input asp-for="Name" type="text" class="form-control" id="horizontal-email-input">
                        </div>
                    </div>
                    <div class="form-group row mb-4">
                        <label for="horizontal-password-input" class="col-sm-3 col-form-label">Hedef Link</label>
                        <div class="col-sm-9">
                            <input asp-for="ImageLink" type="text" class="form-control" id="horizontal-password-input">
                        </div>
                    </div>
                    <div class="form-group row mb-4">
                        <label for="horizontal-password-input" class="col-sm-3 col-form-label">Sıra</label>
                        <div class="col-sm-9">
                            <input asp-for="Orders" type="number" class="form-control" id="horizontal-password-input">
                        </div>
                    </div>

                    <div class="form-group row justify-content-end">
                        <div class="col-sm-9">


                            <div>
                                <button type="submit" class="btn btn-primary w-md">EKLE</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>