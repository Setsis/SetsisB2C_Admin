<div class="modal fade" id="BrandsAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Yeni Marka Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" class="form-group">
                    <div class="form-group">
                        <label for="example-text-input" class="col-md-12 col-form-label">Marka Kodu</label>
                        <div class="col-md-12">
                            <input class="form-control" type="text" value="Kategori Adı" id="example-text-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-text-input" class="col-md-12 col-form-label">Marka Adı</label>
                        <div class="col-md-12">
                            <input class="form-control" type="text" value="Kategori Kodu" id="example-text-input">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="example-text-input" class="col-md-12 col-form-label">Marka Fotoğrafı</label>
                        <div class="col-md-12">
                            <input type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label mx-3" for="customFile"></label>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary">Ekle</button>
            </div>
        </div>
    </div>
</div>
