<div class="modal fade" id="BrandsUpdate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Marka Güncelle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                @using (Html.BeginForm("UpdateBrand", "Stock", null, FormMethod.Post))
                {

                    <div class="modal-body">

                        <div class="form-group">
                            <label for="example-text-input" class="col-md-12 col-form-label">Marka Kodu</label>
                            <div class="col-md-12">
                                <input name="BrandCode" class="form-control" type="text" id="markakodu">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-text-input" class="col-md-12 col-form-label">Marka Adı</label>
                            <div class="col-md-12">
                                <input name="BrandName" class="form-control" type="text" id="markaadi">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="example-text-input" class="col-md-12 col-form-label">Marka Fotoğrafı</label>
                            <div class="col-md-12">
                                <div class="custom-file mb-3">
                                    <input name="BrandImgPath" type="file" class="custom-file-input" id="markafotografi">
                                    <label class="custom-file-label" id="markafotografilabel" for="AddPhotos">Fotoğraf Ekle</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                }
            
        </div>
    </div>
</div>
<script src="assets/libs/bs-custom-file-input/bs-custom-file-input.min.js"></script>