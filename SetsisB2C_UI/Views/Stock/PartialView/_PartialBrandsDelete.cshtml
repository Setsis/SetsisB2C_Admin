<div class="modal fade" id="BrandsDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Marka Sil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("DeleteBrand", "Stock", null, FormMethod.Post))
            {
                <div class="modal-body">
                    <input type="hidden" id="DeleteID" name="BrandID" class="form-control" />
                    <span id="SilinenMarka"></span> Markası Silinsin mi?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger" style="width:100px">Sil</button>
                </div>
            }

        </div>
    </div>
</div>