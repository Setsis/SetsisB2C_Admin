@model IEnumerable<SetsisB2C_UI.Models.Orders.Orders>
@{
    ViewData["Title"] = "AllOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Tüm Siparişler</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Sipariş</a></li>
                    <li class="breadcrumb-item active">Tüm Siparişler</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-pull-2 col-md-offset-1">Filtreleme:</div>
                   
                    <div class="col-sm-pull-2">
                        <div class="search-box mr-2 mb-2 d-inline-block">
                            <div class="position-relative">
                                <input type="text" class="form-control" placeholder="Müşteri Adı">
                                <i class="bx bx-search-alt search-icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-pull-2">
                        <div class="search-box mr-2 mb-2 d-inline-block">
                            <div class="position-relative">
                                <input type="text" class="form-control" placeholder="Sipariş No.">
                                <i class="bx bx-search-alt search-icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-pull-2">
                        <div class="search-box mr-2 mb-2 d-inline-block">
                            <div class="position-relative">
                                <input type="text" class="form-control" placeholder="Barkod">
                                <i class="bx bx-search-alt search-icon"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-push-2">
                        <div class="search-box mr-2 mb-2 d-inline-block">
                            <div class="position-relative">
                                <input type="text" class="form-control" placeholder="Ürün Kodu">
                                <i class="bx bx-search-alt search-icon"></i>
                            </div>
                        </div>
                    </div>
             
                </div>

                <div class="table-responsive">
                    <table class="table table-centered table-nowrap">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Fotoğraf</th>
                                <th>Sipariş Bilgileri</th>
                                <th>Alıcı Adı</th>
                                <th>Ürün Adı</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th>Kargo</th>
                                <th>Aksiyon</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input">
                                            <label class="custom-control-label" for="@item.OrderNumber">&nbsp;</label>
                                        </div>
                                    </td>
                                    <td>
                                        <img src="~/HTML/Admin/src/assets/images/product/img-1.png" alt="@item.OrderNumber" height="35" width="35">
                                    </td>
                                    <td>
                                        <span style="white-space: pre-line">Sipariş No: #@item.OrderNumber </span>
                                        Sipariş Tarihi: @item.CreatedDate
                                    </td>
                                    <td>
                                        @item.FullName
                                    </td>
                                    <td>@item.ItemDescription</td>

                                    <td>@item.Qty1</td>
                                    <td>@item.Price</td>
                                    <td>X KARGO</td>
                                    <td>
                                        <ul class="list-inline font-size-20 contact-links mb-0 ">
                                            <li class="list-inline-item px-2">
                                                <a href="" data-toggle="tooltip" data-placement="top" title="işlem Yap"><i class="mdi mdi-pencil font-size-16 text-success mr-1"></i></a>
                                            </li>
                                            <li class="list-inline-item px-2">
                                                <a id="orderDelete" data-toggle="tooltip" data-placement="top" title="Sil"><i class="mdi mdi-trash-can font-size-16 text-danger mr-1"></i></a>
                                            </li>
                                        </ul>


                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <ul class="pagination pagination-rounded justify-content-end mb-2">
                    <li class="page-item disabled">
                        <a class="page-link" href="javascript: void(0);" aria-label="Previous">
                            <i class="mdi mdi-chevron-left"></i>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="javascript: void(0);">1</a></li>
                    <li class="page-item"><a class="page-link" href="javascript: void(0);">2</a></li>
                    <li class="page-item"><a class="page-link" href="javascript: void(0);">3</a></li>
                    <li class="page-item"><a class="page-link" href="javascript: void(0);">4</a></li>
                    <li class="page-item"><a class="page-link" href="javascript: void(0);">5</a></li>
                    <li class="page-item">
                        <a class="page-link" href="javascript: void(0);" aria-label="Next">
                            <i class="mdi mdi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


@section Order {

    <script>


        document.getElementById("orderDelete").addEventListener("click", function () {

            Command: toastr["success"]("Sipariş Silme İşlemi Başarıyla Tamamlandı")

            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": 300,
                "hideDuration": 1000,
                "timeOut": 5000,
                "extendedTimeOut": 1000,
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }

        })


    </script>



}
