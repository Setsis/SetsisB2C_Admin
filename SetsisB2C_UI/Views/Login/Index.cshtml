@model User
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <title>Login | Skote - Responsive Bootstrap 4 Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/HTML/Admin/dist/assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/HTML/Admin/dist/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/HTML/Admin/dist/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/HTML/Admin/dist/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <link href="~/HTML/Admin/dist/assets/css/style.css" rel="stylesheet" type="text/css" />

</head>

<body>
    <div class="account-pages my-5 pt-sm-5 bg-img">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-soft-primary">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">

                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="~/HTML/Admin/dist/assets/images/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div>
                                <a href="index.html">
                                    <div class="avatar-md profile-user-wid mb-4">
                                        <span class="avatar-title rounded-circle bg-light">
                                            <img src="~/HTML/Admin/dist/assets/images/logo.svg" alt="" class="rounded-circle" height="34">
                                        </span>
                                    </div>
                                </a>
                            </div>
                            <div class="p-2">
                                <form asp-controller="Login" asp-action="Index" method="post" class="form-horizontal">

                                    <div class="form-group">
                                        <label for="username">Kullanıcı Adı</label>
                                        <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="Kullanıcı Adı">
                                    </div>

                                    <div class="form-group">
                                        <label for="userpassword">Şifre</label>
                                        <input asp-for="Password" type="password" class="form-control" id="userpassword" placeholder="Şifre">
                                    </div>



                                    <div class="mt-3">
                                        <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Giriş Yap</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <script src="~/HTML/Admin/dist/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/HTML/Admin/dist/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/HTML/Admin/dist/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/HTML/Admin/dist/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/HTML/Admin/dist/assets/libs/node-waves/waves.min.js"></script>

    <!-- App js -->
    <script src="assets/js/app.js"></script>
</body>
</html>





