            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0 font-size-18">Genel Ayarlar</h4>

            </div>
        </div>
    </div>

    <div class="p-2">



        <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2 d-sm-block d-md-block ">


                <label class="font-weight-bold" for="exampleRadios1">
                    Blog Tipi
                </label>

            </div>
            <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2 d-sm-block d-md-block ">
                <div class="form-check mt-1 mt-sm-0">
                    <input class="form-check-input" id="icerik" type="radio" name="exampleRadios" value="option1">
                    <label class="form-check-label" for="exampleRadios1">
                        İçerik
                    </label>
                </div>
            </div>
            <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2 d-sm-block d-md-block">
                <div class="form-check mt-2 mt-sm-0">
                    <input class="form-check-input" id="product" type="radio" name="exampleRadios" value="option1">
                    <label class="form-check-label" for="exampleRadios1">
                        Ürün
                    </label>

                </div>
            </div>

        </div>
    </div>
    <div class="card" id="crd" style="display:none">
        <div class="card-body">
            <div class="col-md-5 ">
                <div class="form-check">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8">
                            <input class="form-control" type="text" id="search" display="none" placeholder="Ürün Ara">

                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4">
                            <button class="btn btn-success" id="ekle" type="submit">ARA</button>
                        </div>


                    </div>

                </div>
            </div>
            <div class="table-responsive" id="show" style="display:block;">
                <table class="table" style="display:none;">
                    <thead>
                        <tr>

                            <th>Barcode</th>
                            <th>Ürün Adı</th>
                            <th>Açıklama</th>
                            <th>Renk</th>

                        </tr>
                    </thead>
                    <tbody id="tblproduct">
                    </tbody>
                </table>
            </div>

        </div>
    </div>


    <div class="form-group row mt-4">
        <div class="col-sm-12 col-md-3 col-lg-2 col-xl-2">


            <label class="form-check-label font-weight-bold pt-2" for="exampleRadios1">
                Başlık
