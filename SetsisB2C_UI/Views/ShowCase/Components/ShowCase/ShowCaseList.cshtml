<div class="row">
    <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                @*<th>#</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>*@
                                <th>Vitrin Adı</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ShowCase sc in Model)
                            {
                                <tr>
                                    <td>@sc.TypeName</td>
                                    <td align="right">
                                        <a id="add" href="#" data-toggle="modal" data-target="#addModal" data-sc-id="@sc.PageDesignId" data-placement="top" title="Ürün Ekle"><i class="fas fa-plus font-size-16 mr-1"></i></a>
                                        <a id="edit" href="#" data-toggle="modal" data-target="#editModal" data-sc='{"name":"@sc.DesignName","header":"@sc.DesignHeader","description":"@sc.Description","width":@sc.RowWidth,"height":@sc.RowHeight}' data-placement="top" title="Düzenle"><i class="mdi mdi-pencil font-size-16 text-success mr-1"></i></a>
                                        <a id="delete" href="#" data-toggle="tooltip" data-placement="top" title="Sil"><i class="mdi mdi-trash-can font-size-16 text-danger mr-1"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
