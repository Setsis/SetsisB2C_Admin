@model List<ShowCaseProduct>
<div class="row">
    <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                @*<th>#</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>*@
                                <th>Barkod</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ShowCaseProduct sc in Model)
                            {
                                <tr>
                                    <td>@sc.Barcode</td>
                                    <td align="right">
                                        <a id="delete" href="#" data-toggle="tooltip" data-placement="top" title="Sil"><i class="mdi mdi-trash-can font-size-16 text-danger mr-1"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
